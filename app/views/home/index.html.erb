<% provide(:title, '') %>
<% if signed_in? %>
    
  <%-# Profile Info -%>
  <div class="span6 offset3">
    <h2><%= @user.name %></h2>

    <%= render 'layouts/messages' %>

    <div class="profile">
      <div class="profilephoto">
        <%= image_tag @user.photo.url(:small) %>
      </div>
    </div>
    <br />
    <div class="profile">
      <ul>
        <li><%= link_to 'Update My Profile', edit_user_registration_path %></li>
        <!--<li><a href="<%= following_user_path(@user) %>">My Bartenders (<%= @user.followed_users.count %>)</a></li>
        <li><a href="<%= followers_user_path(@user) %>">My Followers (<%= @user.followers.count %>)</a></li>-->
      </ul>
    </div>
  </div>

<% else %>

  <%-# Home page -%>
  <div class="span10 offset1">
    <%= render 'layouts/messages' %>
    <div id="homeblurb">The Good Times app lets you stay in touch with your favorite bartenders. You and your friends can see who's working where and discover new drinking destinations. Bartenders can build their following and promote their latest concoction.<br /><br /><strong>When you have good people, you have Good Times!</strong></div>
    <div class="maincta">
      <div class="mainctainnerleft"><a href="https://itunes.apple.com/us/app/mybarkeepers/id784235366?ls=1&mt=8"><div class="btn-ios"></div></a></div>
      <div class="mainctainnerright"><a href="https://play.google.com/store/apps/details?id=com.heybarkeep.android"><div class="btn-android"></div></a></div>
    </div> 
    <br /><br />
    <div class="phoneart">
      <%= image_tag("phone_promosite.png", alt: "Good Times", class:'img-responsive') %>
    </div>
  </div> 
<% end %>